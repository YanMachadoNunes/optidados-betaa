  // prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL") // Usa a URL 'prisma+postgres' (Rápida)
  directUrl = env("DIRECT_URL")   // Usa a URL 'postgres' (Direta para migrations)
}


// 1. Clientes
model Customer {
  id        String   @id @default(uuid())
  name      String
  phone     String?
  email     String?
  cpf       String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sales     Sale[]
  prescriptions Prescription[]  // <--- ADICIONE ISSO AQUI
}

// 2. Produtos (Estoque)
model Product {
  id          String   @id @default(uuid())
  name        String
  price       Decimal
  costPrice   Decimal
  stock       Int      @default(0)
  category    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  saleItems   SaleItem[]
}

model Sale {
  id            String    @id @default(uuid())  // <--- ESSA LINHA É OBRIGATÓRIA
  customerId    String?
  customer      Customer? @relation(fields: [customerId], references: [id])

  totalAmount   Decimal   @db.Decimal(10, 2)
  status        String    @default("PENDING")
  paymentMethod String?
  createdAt     DateTime  @default(now())

  items         SaleItem[]
}

model SaleItem {
  id          String   @id @default(uuid())
  saleId      String
  // ADICIONADO: onDelete: Cascade (Se apagar a venda, apaga os itens)
  sale        Sale     @relation(fields: [saleId], references: [id], onDelete: Cascade)

  productId   String
  product     Product  @relation(fields: [productId], references: [id])

  quantity    Int
  unitPrice   Decimal  @db.Decimal(10, 2) // Força 2 casas decimais
}

model Prescription {
  id            String   @id @default(uuid())
  customerId    String
  customer      Customer @relation(fields: [customerId], references: [id])

  doctorName    String?
  crm           String?

  // Olho Direito
  odSpherical   Decimal  @default(0)
  odCylindrical Decimal  @default(0)
  odAxis        Int      @default(0)

  // Olho Esquerdo
  oeSpherical   Decimal  @default(0)
  oeCylindrical Decimal  @default(0)
  oeAxis        Int      @default(0)

  addition      Decimal  @default(0)
  examDate      DateTime @default(now())
  dueDate       DateTime?
  createdAt     DateTime @default(now())
}

